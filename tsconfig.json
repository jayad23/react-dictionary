{
  "compilerOptions": {
    "target": "ESNext",
    "paths": {
      "@components/*": [
        "./src/components/*"
      ],
      "@common/*": [
        "./src/components/common/*"
      ],
      "@utilities/*": [
        "./src/utilities/*"
      ],
      "@context/*": [
        "./src/context/*"
      ],
      "@theme/*": [
        "./src/theme/*"
      ],
      "@layout/*": [
        "./src/layout/*"
      ],
      "@hooks/*": [
        "./src/hooks/*"
      ],
      "@api/*": [
        "./src/api/*"
      ]
    },
    "useDefineForClassFields": true,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
  },
  "include": [
    "src"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ],
}